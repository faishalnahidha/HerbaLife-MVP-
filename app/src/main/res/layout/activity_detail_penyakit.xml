<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.izzanmutik.herbalifemvp.detailPenyakit.DetailPenyakitActivity">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/detailPenyakit_textViewLabelBahan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/label_bahan_obat"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/detailPenyakit_textViewBahanObat"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/detailPenyakit_textViewBahanObat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/lorem_ipsum_short"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailPenyakit_textViewLabelBahan"
                app:layout_constraintBottom_toTopOf="@+id/detailPenyakit_textViewLabelCara"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/detailPenyakit_textViewLabelCara"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/label_cara_membuat_obat"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                app:layout_constraintTop_toBottomOf="@+id/detailPenyakit_textViewBahanObat"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/detailPenyakit_textViewCaraMembuat"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/detailPenyakit_textViewCaraMembuat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/lorem_ipsum"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailPenyakit_textViewLabelCara"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="32dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
